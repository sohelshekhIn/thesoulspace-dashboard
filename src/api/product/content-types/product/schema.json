{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Name": {
      "type": "string",
      "required": true,
      "maxLength": 70
    },
    "Price": {
      "type": "integer",
      "required": true,
      "min": 40,
      "max": 99999
    },
    "slug": {
      "type": "uid",
      "targetField": "Name",
      "required": true
    },
    "sizes": {
      "type": "json"
    },
    "Product_Image": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "Short_Description": {
      "type": "string",
      "required": true,
      "maxLength": 150,
      "minLength": 10
    },
    "Product_Description": {
      "type": "richtext",
      "required": true,
      "minLength": 20
    }
  }
}
